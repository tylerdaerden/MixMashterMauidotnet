<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MixMashter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MixMashter"
    xmlns:view="clr-namespace:MixMashter.View"
    Shell.FlyoutBehavior="Disabled"
    Title="MixMashter">
    <TabBar>

        <ShellContent
            Title="HomePage"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" 
        />
    
        <ShellContent
            Title="Tracks"
            ContentTemplate="{DataTemplate view:TracksPage}" 
            Route="TracksPage"
        />

        <ShellContent
            Title="Artists"
            ContentTemplate="{DataTemplate view:ArtistsPage}" 
            Route="ArtistsPage"
        />

    </TabBar>
    
</Shell>
